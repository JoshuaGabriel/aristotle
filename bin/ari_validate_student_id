cmd_dir=$(dirname "$0") || exit 1
source "$cmd_dir/utilities"

ari_validate_line="$cmd_dir/ari_validate_line"

if [ $# -ne 1 ]; then
	panic "no data specified"
fi

student_id="$1"

"$ari_validate_line" -q -e '^[Vv][0-9]+$' "$student_id" 2> /dev/null
status=$?
if [ "$status" -ne 0 ]; then
	panic "student ID is not of the form of \"V\" followed by digits"
fi
