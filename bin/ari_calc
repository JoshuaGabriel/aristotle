usage()
{
	echo "$@" 1>&2
	cat <<- EOF
	usage: $0 [options] expression...
	options:
	EOF
	exit 2
}

format="%.1f"
while getopts f: option; do
	case "$option" in
	f)
		format="$OPTARG";;
	*)
		usage "invalid option $option";;
	esac
done
shift $((OPTIND - 1))

expressions=("$@")

for expression in "${expressions[@]}"; do
	awk 'BEGIN{printf "'"$format"'\n", '"$expression"';}' /dev/null
done
