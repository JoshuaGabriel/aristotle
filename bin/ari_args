cmd_dir=$(dirname "$0") || exit 1
source "$cmd_dir/utilities"

print()
{
	if [ "$use_stderr" -ne 0 ]; then
		eecho "$@"
	else
		echo "$@"
	fi
}

use_stderr=0

while getopts e option; do
	case "$option" in
	e)
		use_stderr=1;;
	*)
		usage "invalid option $option";;
	esac
done
shift $((OPTIND - 1))

args=("$@")
print "number of arguments: ${#args[@]}"
for i in "${!args[@]}"; do
	print "args[$i]=${args[$i]};"
done
